<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/my_db</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">freshhuk</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.generate_statistics">true</property>
        <property name="hibernate.jdbc.batch_size">20</property>
        <property name="hibernate.order_inserts">true</property>
        <property name="hibernate.order_updates">true</property>


        <!-- Mapping clases -->
        <mapping class="com.findmeapp.findme.Models.Entities.Photo"/>
        <mapping class="com.findmeapp.findme.Models.Entities.User"/>
    </session-factory>
</hibernate-configuration>